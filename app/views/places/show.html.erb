<div class="container">
	
	<div class="jumbotron">
		<h1>Trends for <br /> <span style="color:#55acee"> <%= @place.name %></span> </h1>
	</div>
<div class="starter-template">
	  <% if @place.errors.any? %>
	    <h2>Sorry, we cannot show trends for <%= @place.name %></h2>
	  <% end %>
		<h1>
			<ol>
				<% @place.trends.each do |x| %>
				<li> <%= link_to x["name"], x["url"] %> </li>
				<% end %>
			</ol>
		</h1>
<br />
<br />
<br />
		<div class="footer">
			<div class="container">
				<p class="text-muted"> 
						Yahoo WOEID: <%= @place.spot %> | 
						Time <%= @place.created_at %> |
					<%= link_to 'Select Another Location', places_path %>
				</p>
			</div>
		</div>
	</div>
</div><!-- /.container -->